<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.ict.ex.simulation.mapper.UserMapper">

	<resultMap id="authMap" type="edu.ict.ex.simulation.vo.AuthVO">
		<result property="user_id" column="user_id"/>
		<result property="authority" column="authority"/>
	</resultMap>
	
	<resultMap id="userMap" type="edu.ict.ex.simulation.vo.UserVO">
		<result property="user_id" column="user_id"/>
		<result property="passwd" column="passwd"/>
		<result property="cif_gubun" column="cif_gubun"/>
		<result property="birthday" column="birthday"/>
		<result property="biz_no" column="biz_no"/>
		<result property="name" column="name"/>
		<result property="telno" column="telno"/>
		<result property="email" column="email"/>
		<result property="create_date" column="create_date"/>
		<result property="last_change_date" column="last_change_date"/>
		<association property="authList" resultMap="authMap"></association>
	</resultMap>

	<select id="getUser" resultMap="userMap">
		<![CDATA[
			select * from CUSTOMER_MAS cm
            join authorities a on cm.user_id = a.user_id
            where cm.user_id = #{user_id}
		]]>
	</select>
	
</mapper>