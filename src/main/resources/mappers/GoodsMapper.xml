		resultMap="providerMap">
		SELECT * FROM PROVIDER_MAS
	</select>

	<!-- 상품 진열 상태 바꾸기 -->
	<update id="updateStatusTo">
		<![CDATA[
			UPDATE goods_mas 
			SET goods_status = #{status} 
			WHERE goods_code = #{goods_code}
		]]>
	</update>

	<!-- 상품 삭제 -->
	<delete id="delete">
		<![CDATA[
			delete FROM GOODS_MAS where
			goods_code = #{goodscode}
		]]>
	</delete>

	<!-- 상품 정보 수정 -->
	<update id="modifyGoods">
		<![CDATA[
			update GOODS_MAS set 
			goods_gubun = #{goods_gubun},
			provider_code = #{provider_code},
			goods_name = #{goods_name},
			orign_code = #{orign_code},
			period_mm = #{period_mm},
			invest_gubun = #{invest_gubun},
			forignexg_kind = #{forignexg_kind},
			tran_unit = #{tran_unit},
			goods_status = #{goods_status}
			where goods_code = #{goods_code}		
		]]>
	</update>

	<!-- 상품 추가 -->
	<insert id="insertGoods">
    	<![CDATA[
    		insert into GOODS_MAS 
    		(goods_code, goods_gubun, provider_code, 
    		goods_name, orign_code, period_mm, 
    		invest_gubun, forignexg_kind, tran_unit, goods_status) 
    		values 
    		(
    		goods_code_seq.NEXTVAL, 
    		#{goods_gubun}, 
    		#{provider_code}, 
    		#{goods_name}, 
    		#{orign_code}, 
    		#{period_mm},  
    		#{invest_gubun}, 
    		#{forignexg_kind}, 
    		#{tran_unit}, 
    		#{goods_status} 
    		)
    	]]>
	</insert>

