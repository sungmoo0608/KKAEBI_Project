		<![CDATA[
		SELECT *
			FROM goods_mas gm
			JOIN provider_mas pm ON gm.provider_code = pm.provider_code
			JOIN (
			    SELECT *
			    FROM exchangerate_his eh
			    WHERE eh.base_date = TO_CHAR(SYSDATE, 'YYYYMMDD')
			      AND eh.seq_no = (
			          SELECT MAX(seq_no)
			          FROM exchangerate_his
			          WHERE goods_code = eh.goods_code
			            AND base_date = TO_CHAR(SYSDATE, 'YYYYMMDD')
