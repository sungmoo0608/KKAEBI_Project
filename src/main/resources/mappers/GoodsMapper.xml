	<select id="getStockList" resultMap="GoodsStockpriceProviderMap">
		<![CDATA[
			SELECT *
			FROM goods_mas gm
			JOIN provider_mas pm ON gm.provider_code = pm.provider_code
			JOIN (
			    SELECT *
			    FROM stockprice_his sh
			    WHERE sh.base_date = TO_CHAR(SYSDATE, 'YYYYMMDD')
			      AND sh.seq_no = (
			          SELECT MAX(seq_no)
			          FROM stockprice_his
			          WHERE goods_code = sh.goods_code
			            AND base_date = TO_CHAR(SYSDATE, 'YYYYMMDD')
			      )
			) sh ON gm.goods_code = sh.goods_code
